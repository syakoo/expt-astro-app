{
  "name": "expt-astro-app",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
    "lint": "eslint --ext .js,.ts,.astro src",
    "lint:fix": "eslint --ext .js,.ts,.astro --fix src"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn emoji-prefix-commit"
  },
  "lint-staged": {
    "*.{js,ts,astro,cjs,mjs}": [
      "eslint --fix"
    ],
    "*.{js,ts,astro,cjs,mjs,css}": [
      "prettier --write --plugin=prettier-plugin-astro"
    ]
  },
  "dependencies": {
    "astro": "^2.10.12"
  },
  "devDependencies": {
    "@syakoo/emoji-prefix-commit": "git+https://github.com/syakoo/emoji-prefix-commit",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-astro": "^0.28.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "prettier-plugin-astro": "^0.11.1",
    "simple-git-hooks": "^2.9.0"
  }
}
